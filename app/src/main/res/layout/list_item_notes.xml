<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/text_padding"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/titleTv"
        tools:text="Morocco Win Stolen."
        android:textSize="@dimen/title_text_size"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/contentTv"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/text_padding"
        android:fontFamily="sans-serif-condensed"
        tools:text="Morocco win was stolen when an offside goal was allowed by the referee. Morroco have bowed out of the world cup with a single point but feel that teh VAR was against them."
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/updated_on"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/text_padding"
        tools:text="Updated: 1hr ago"
        android:layout_height="wrap_content" />
</LinearLayout>
